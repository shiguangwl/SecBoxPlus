<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/video_main"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="#f21c1c1d"
        android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="24dp"
            android:text="弹幕设置"
            android:textColor="#ffffffff"
            android:textSize="18sp" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="24dp"
            android:text="弹幕密度"
            android:textColor="#ffffffff"
            android:textSize="13sp" />

    <SeekBar
            android:progressDrawable="@drawable/dkplayer_layer_progress_bar"
            android:thumb="@drawable/dkplayer_seekbar_thumb"
            android:thumbOffset="0dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:id="@+id/dm_maxLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="5.0dp"
            android:minHeight="5.0dp" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:text="弹幕速度"
            android:textColor="#ffffffff"
            android:textSize="13sp" />

    <SeekBar
            android:progressDrawable="@drawable/dkplayer_layer_progress_bar"
            android:thumb="@drawable/dkplayer_seekbar_thumb"
            android:thumbOffset="0dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:id="@+id/dm_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="5.0dp"
            android:minHeight="5.0dp" />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:text="弹幕大小"
            android:textColor="#ffffffff"
            android:textSize="13sp" />

    <SeekBar
            android:progressDrawable="@drawable/dkplayer_layer_progress_bar"
            android:thumb="@drawable/dkplayer_seekbar_thumb"
            android:thumbOffset="0dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:id="@+id/dm_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="5.0dp"
            android:minHeight="5.0dp" />
</LinearLayout>
