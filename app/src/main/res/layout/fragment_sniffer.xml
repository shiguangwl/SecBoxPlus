<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="站点解析"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="24dp" />



    <ImageView
            android:src="@drawable/bilibili_logo"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:id="@+id/bilibili_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <ImageView
            android:src="@drawable/aiqiyi_logo"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:id="@+id/aiqiyi_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bilibili_logo"
            android:layout_marginTop="5dp" />

    <ImageView
            android:src="@drawable/youku_logo"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:id="@+id/youku_logo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tenxun_logo"
            android:layout_marginTop="5dp" />

    <ImageView
            android:src="@drawable/tx_logo"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:id="@+id/tenxun_logo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline5"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="169dp" />

    <TextView
            android:text="点击图标快速播放↑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/aiqiyi_logo"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
