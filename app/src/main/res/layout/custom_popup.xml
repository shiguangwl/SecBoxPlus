<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background"
        android:paddingTop="15dp"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tv_title"
            android:text="添加订阅"
            android:textSize="20sp"
            android:textColor="@color/_xpopup_title_color"
            android:lines="1"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

    <androidx.core.widget.NestedScrollView
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
        <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/_xpopup_content_color"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

            <TextView
                    android:layout_marginStart="20dp"
                    android:text="订阅名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/et_input1"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColorHint="#999999"
                    android:textColor="@color/_xpopup_content_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginStart="20dp"
                    android:text="订阅链接"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/et_input2"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColorHint="#999999"
                    android:textColor="@color/_xpopup_content_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <View
            android:layout_width="match_parent"
            android:id="@+id/xpopup_divider1"
            android:background="@color/_xpopup_list_divider"
            android:layout_height=".5dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="end"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_cancel"
                android:textSize="16sp"
                android:text="取消"
                android:textColor="#666666"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        <View
                android:layout_width=".5dp"
                android:id="@+id/xpopup_divider2"
                android:background="@color/_xpopup_list_divider"
                android:layout_height="match_parent"/>

        <TextView
                android:textSize="16sp"
                android:id="@+id/tv_confirm"
                android:text="确定"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
